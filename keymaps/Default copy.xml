<keymap version="1" name="Default copy" parent="$default">
  <action id="$Paste">
    <keyboard-shortcut first-keystroke="shift insert" />
  </action>
  <action id="EditorPasteSimple">
    <keyboard-shortcut first-keystroke="shift ctrl alt v" />
    <keyboard-shortcut first-keystroke="ctrl v" />
  </action>
  <action id="NextOccurence">
    <keyboard-shortcut first-keystroke="ctrl alt down" />
    <keyboard-shortcut first-keystroke="shift ctrl period" />
  </action>
  <action id="PreviousOccurence">
    <keyboard-shortcut first-keystroke="ctrl alt up" />
    <keyboard-shortcut first-keystroke="shift ctrl comma" />
  </action>
</keymap>